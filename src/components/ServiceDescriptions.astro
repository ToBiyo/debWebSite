---
const { name, description, sessions, results, images = [] } = Astro.props;
import ImageCarousel from "./ImageCarousel.astro";
---

<article class="flex flex-col border-b border-gray-200 space-y-4 py-10 px-4">
  <h2 class="text-2xl lg:text-4xl font-main font-semibold text-gray-800">
    {name}
  </h2>
  <p class="text-gray-600 text-base">{description}</p>

  <div class="flex flex-col flex-wrap gap-6 text-sm text-gray-700">
    {
      sessions && (
        <p class="text-base lg:text-lg">
          <span class="font-medium text-lg">Sedute consigliate:</span>{" "}
          {sessions}
        </p>
      )
    }
    {
      results && (
        <div class="flex flex-col gap-5">
          <span class="font-medium text-lg">Risultati attesi:</span>
          <ul class="list-disc px-4 flex flex-col gap-2">
            {results.map((result: string) => (
              <li class="text-base lg:text-lg">{result}</li>
            ))}
          </ul>
        </div>
      )
    }
  </div>

  <ImageCarousel images={images} />
</article>
