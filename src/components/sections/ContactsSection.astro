---
interface Props {
  description?: string;
  title?: string;
  background?: string;
}
import { Icon } from "astro-icon/components";
import MainHeading from "../typography/MainHeading.astro";
const phoneNumber = import.meta.env.PUBLIC_PHONE;
const address = import.meta.env.PUBLIC_ADDRESS;
const { description, title, background } = Astro.props;
---

<section
  class={` ${background ? background : "bg-cream"} w-full mx-auto py-30 flex flex-col gap-18 px-8 items-center`}
>
  <div class="max-w-[800px] flex flex-col gap-5 text-center">
    <MainHeading tag="h2">{title}</MainHeading>
    {
      description && (
        <p class="text-base lg:text-lg text-black">{description}</p>
      )
    }
  </div>

  <!-- Import delle icone Heroicons come SVG inline -->

  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <div class="flex flex-col gap-6 p-4 md:pr-8">
      <h3
        class="text-2xl lg:text-4xl
        font-main
      font-medium
      mb-2
      flex
      items-center
      gap-3"
      >
        <!-- Icona calendario -->
        <Icon
          name={"mdi:calendar"}
          class={"text-4xl my-auto text-accent"}
        />Orari di apertura
      </h3>
      <ul class="space-y-8 text-base lg:text-lg text-black">
        <li class="border-b border-gray-500 border-dotted p-2">
          Lunedì – Venerdì: 09:00 – 19:00
        </li>
        <li class="border-b border-gray-500 border-dotted p-2">
          Sabato: 09:00 – 14:00
        </li>
        <li class="border-b border-gray-500 border-dotted p-2">
          Domenica: Chiuso
        </li>
      </ul>
    </div>
    <!-- Contatti -->
    <div class="flex flex-col gap-6 p-4 md:pl-8 mt-8 md:mt-0">
      <h3
        class="text-2xl lg:text-4xl font-medium mb-2 flex items-center gap-3 font-main"
      >
        <!-- Icona telefono -->
        <Icon name={"mdi:phone"} class={"text-4xl my-auto text-accent"} /> Contatti
      </h3>
      <ul class="space-y-8 text-base lg:text-lg text-black">
        <li
          class="flex items-center gap-3 border-b border-gray-500 border-dotted p-2"
        >
          <!-- Icona telefono -->
          <Icon name={"mdi:phone"} class={"text-2xl my-auto text-pink-500"} />
          <span>{phoneNumber}</span>
        </li>
        <li
          class="flex items-center gap-3 border-b border-gray-500 border-dotted p-2"
        >
          <!-- Icona WhatsApp -->
          <Icon
            name={"mdi:whatsapp"}
            class={"text-2xl my-auto text-green-500"}
          />
          <span>{phoneNumber} (WhatsApp)</span>
        </li>
        <li
          class="flex items-center gap-3 border-b border-gray-500 border-dotted p-2"
        >
          <!-- Icona posizione -->
          <Icon
            name={"mdi:map-marker"}
            class={"text-2xl my-auto text-red-500"}
          />
          <span>{address}</span>
        </li>
      </ul>
    </div>
  </div>
</section>
